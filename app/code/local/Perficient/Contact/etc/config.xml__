<?xml version="1.0"?>
<config>
  <modules>
    <Perficient_Contact>
      <version>0.0.1</version>
    </Perficient_Contact>
  </modules>
  <frontend>
    <routers>
      <contact>
        <use>standard</use>
          <args>
            <module>Perficient_Contact</module>
            <frontName>contact</frontName>
          </args>
      </contact>
    </routers>
		<layout>
		  <updates>
			<contact>
			  <file>contact.xml</file>
			</contact>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <contact>
        <class>Perficient_Contact_Helper</class>
      </contact>
    </helpers>
	<blocks>
	  <contact>
		<class>Perficient_Contact_Block</class>
	  </contact>
	</blocks>
	<models>
	  <contact>
		<class>Perficient_Contact_Model</class>
		<resourceModel>contact_mysql4</resourceModel>
	  </contact>
	  <contact_mysql4>
		<class>Perficient_Contact_Model_Mysql4</class>
		<entities>		  
			  <contact>
				<table>perficient_contact</table>
			  </contact>
        </entities>
	  </contact_mysql4>
	</models>
	<resources>
	  <contact_setup>
		<setup>
		  <module>Perficient_Contact</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </contact_setup>
	  <contact_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </contact_write>
	  <contact_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </contact_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <contact>
	    <use>admin</use>
		<args>
		  <module>Perficient_Contact</module>
		  <frontName>admin_contact</frontName>
		</args>
	  </contact>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <contact module="contact">
		<title>Contact</title>
		<sort_order>100</sort_order>
		<children>
		  <contact module="contact">
		    <title>Manage Contact</title>
			<sort_order>0</sort_order>
			<action>admin_contact/adminhtml_contact</action>
		  </contact>
		</children>
	  </contact>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<contact translate="title" module="contact">
			  <title>Contact</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <contact translate="title">
			<title>Manage Contact</title>
			<sort_order>0</sort_order>
		  </contact>
			  </children>
			</contact>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<contact>
		  <file>contact.xml</file>
		</contact>
	  </updates>
	</layout>
  </adminhtml>
</config> 