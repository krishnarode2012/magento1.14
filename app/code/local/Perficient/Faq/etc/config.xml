<?xml version="1.0"?>
<config>
	<modules>
		<Perficient_Faq>
			<version>0.0.1</version>
		</Perficient_Faq>
	</modules>
	<frontend>
		<routers>
			<faq>
				<use>standard</use>
				<args>
					<module>Perficient_Faq</module>
					<frontName>faq</frontName>
				</args>
			</faq>
		</routers>
		<layout>
			<updates>
				<faq>
					<file>faq.xml</file>
				</faq>
			</updates>
		</layout>
	</frontend>
	<global>
		<helpers>
			<faq>
				<class>Perficient_Faq_Helper</class>
			</faq>
		</helpers>
		<blocks>
			<faq>
				<class>Perficient_Faq_Block</class>
			</faq>
		</blocks>
		<models>
			<faq>
				<class>Perficient_Faq_Model</class>
				<resourceModel>faq_resource</resourceModel>
			</faq>
			<faq_resource>
				<class>Perficient_Faq_Model_Resource</class>
				<entities>
					<faq>
						<table>perficient_faq</table>
					</faq>
				</entities>
			</faq_resource>
		</models>
		<resources>
			<faq_setup>
				<setup>
					<module>Perficient_Faq</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</faq_setup>
			<faq_write>
				<connection>
					<use>core_write</use>
				</connection>
			</faq_write>
			<faq_read>
				<connection>
					<use>core_read</use>
				</connection>
			</faq_read>
		</resources>
	</global>
	<!--<admin>
		<routers>
			<faq>
				<use>admin</use>
				<args>
					<module>
						<faq before="Mage_Adminhtml">Perficient_Faq</faq>
					</module>
				</args>
			</faq>
		</routers>
	</admin>-->
	<adminhtml>
		<menu>
			<faq module="faq">
				<title>Faq</title>
				<sort_order>100</sort_order>
				<children>
					<faq module="faq">
						<title>Manage Faq</title>
						<sort_order>0</sort_order>
						<action>faq/adminhtml_faq</action>
					</faq>
				</children>
			</faq>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<faq translate="title" module="faq">
							<title>Faq</title>
							<sort_order>1000</sort_order>
							<children>
								<faq translate="title">
									<title>Manage Faq</title>
									<sort_order>0</sort_order>
								</faq>
							</children>
						</faq>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<faq>
					<file>faq.xml</file>
				</faq>
			</updates>
		</layout>
	</adminhtml>
</config> 